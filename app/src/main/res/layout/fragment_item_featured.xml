<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="267dp"
        android:layout_height="392dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/FeaturedPoster"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#00FFFFFF"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/bop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/FeaturedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-black"
        android:text="Birds of Prey"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="#3E3E3E"
        android:textSize="24sp" />

    <RatingBar
        android:id="@+id/FeaturedRating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:indeterminate="false"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="#FFA726"
        android:rating="3.5"
        android:secondaryProgressTint="#FFA726"
        android:stepSize=".1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/FeaturedOverview"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginEnd="0dp"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="XYZ" />

</LinearLayout>